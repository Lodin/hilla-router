{
  "extends": [
    "vaadin/typescript-requiring-type-checking",
    "vaadin/imports-typescript",
    "vaadin/lit",
    "vaadin/prettier",
    "vaadin/testing"
  ],
  "plugins": [
    "eslint-plugin-tsdoc"
  ],
  "rules": {
    "@typescript-eslint/promise-function-async": "off",
    "tsdoc/syntax": "error"
  }
}
